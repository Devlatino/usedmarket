{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "engines": { "node": ">=18.18" },
  "scripts": {
    "dev": "nodemon --watch server --exec \"node --loader ts-node/esm server/index.ts\"",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "express": "5.1.0",
    "@tanstack/react-query": "5.74.4",
    "drizzle-orm": "0.43.1"
  },
  "devDependencies": {
    "vite": "^5.4.18",
    "esbuild": "^0.23.0",
    "typescript": "^5.5.0",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.0",
    "playwright": "^1.52.0"
  }
}
